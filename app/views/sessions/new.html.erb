<%# Basic login form for user %>
<section class="login-form">
  <div class="container">
    <div class="row">
      <h1>Login</h1>
      <%= form_tag '/login' do %>
        <div class="form-group">
          <%= text_field_tag :username, nil, class: 'form-control', placeholder: 'Enter your username' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter your password'  %>
        </div>
        <%= submit_tag "Submit", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</section>
<%# / Basic login form for user %>