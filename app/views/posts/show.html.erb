<!-- Post Content -->
 <article>
     <div class='container'>
         <div class='row'>
             <div class='col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1'>
                <h2 class='section-heading'><%= simple_format @post.title %></h2>
                <%= simple_format @post.body %>
             </div>
         </div>

         <div class='row'>
            <div class='col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1'>
             <!-- Blog Comments -->

             <!-- Comments Form -->
             <div class='well'>
                 <h4>Leave a Comment:</h4>
                 <%= form_for :comment, url: post_comments_path(@post), html: { id: 'comments_form', data: { tg_remote: "", tg_refresh_on_success: "comments_list", tg_refresh_on_error: "comments_list"} }, role: 'form' do |f| %>
                   <div class='form-group'>
                    <%= f.text_area :body, placeholder: 'Enter your comment', class: 'form-control', rows: '3' %>
                   </div>
                   <%= f.submit 'Submit', class: 'btn btn-primary' %>
                 <% end %>
             </div>

             <hr>

            <%= render partial: 'comments/comments', locals: {comments: @comments, resource: @post} %>

            </div>
         </div>
     </div>
 </article>

 <hr>

